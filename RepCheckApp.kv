<RepCheckAppBoxLayout>:
    id: main_root
    orientation: 'vertical'
    Label:
        id: text_layout
        text: 'добро пожаловать!'.encode('cp1251').decode('utf-8')
        font_size: 50
    BoxLayout:
        id: box
        orientation: 'vertical'
        Button:
            id: shed
            text: 'Расписание'.encode('cp1251').decode('utf-8')
            font: 'Arial'
            font_size: 26
        Button:
            id: add
            text: 'Добавить запись'.encode('cp1251').decode('utf-8')
            font: 'Arial'
            font_size: 26
            on_press: main_root.child_save()

<ViewAddEvent>:
    id: child_root
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        border: (4, 4, 4, 4)
        id: add_save
        BoxLayout:
            border: (4, 4, 4, 4)
            orientation: 'vertical'
            height: add_save.height / 3
            id: add_save_input
            BoxLayout:
                id: add_save_name
                orientation: 'horizontal'
                Label:
                    id: user
                    text: 'Данные ученика'.encode('cp1251').decode('utf-8')
                    font_size: 20
                TextInput:
                    id: username
            BoxLayout:
                id: add_save_unit
                orientation: 'horizontal'
                Label:
                    id: unit
                    text: 'Тема урока'.encode('cp1251').decode('utf-8')
                    font_size: 20
                TextInput:
                    id: Unit
            BoxLayout:
                id: add_save_cost
                orientation: 'horizontal'
                Label:
                    id: cost
                    text: 'цена'.encode('cp1251').decode('utf-8')
                    font_size: 20
                TextInput:
                    id: Cost
            BoxLayout:
                id: add_save_date
                orientation: 'horizontal'
                Label:
                    id: date_name
                    text: 'дата и время занятия'.encode('cp1251').decode('utf-8')
                BoxLayout:
                    id: add_save_date_name
                    orientation: 'horizontal'
                    DatePicker:
                        id: date
                    TextInput:
                        id: hour
            BoxLayout:
                id: add_save_check
                orientation: 'horizontal'
                Label:
                    id: check_state
                    text: 'урок пройден'.encode('cp1251').decode('utf-8')
                CheckBox:
                    id: check_state_box
                Label:
                    id: check_salary
                    text: 'урок оплачен'.encode('cp1251').decode('utf-8')
                CheckBox:
                    id: check_salary_box
        BoxLayout:
            orientation: 'horizontal'
            border: (4, 4, 4, 4)
            Button:
                id: save_add
                size_hint_x: .1
                text: 'Сохранить'.encode('cp1251').decode('utf-8')
                font: 'Arial'
                font_size: 26
                on_press: root.add_record(username.text,Unit.text, Cost.text, date.text, hour.text, check_state_box.active, check_salary_box.active )
            Button:
                id: close_add
                size_hint_x: .1
                text: 'Закрыть'.encode('cp1251').decode('utf-8')
                font: 'Arial'
                font_size: 26
                on_press: root.close_child()








