<RepCheckAppBoxLayout>:
    id: main_root
    orientation: 'vertical'
    Label:
        id: text_layout
        text: 'добро пожаловать!'.encode('cp1251').decode('utf-8')
        font_size: 50
    BoxLayout:
        id: box
        orientation: 'vertical'
        Button:
            id: shed
            text: 'Расписание'.encode('cp1251').decode('utf-8')
            font: 'Arial'
            font_size: 26
        Button:
            id: add
            text: 'Добавить запись'.encode('cp1251').decode('utf-8')
            font: 'Arial'
            font_size: 26
            on_press: main_root.child_save()

<ViewAddEvent>:
    id: child_root
    orientation: 'vertical'
    center: .2,.2
    Label:
        id: user
        text: 'Имя'.encode('cp1251').decode('utf-8')
        font_size: 50
    BoxLayout:
        size_hint: .7, .7
        id: box_save
        orientation: 'vertical'
        Button:
            id: save_add
            text: 'Сохранить'.encode('cp1251').decode('utf-8')
            font: 'Arial'
            font_size: 26
        Button:
            id: close_add
            text: 'Закрыть'.encode('cp1251').decode('utf-8')
            font: 'Arial'
            font_size: 26
            on_press: root.close_child()





